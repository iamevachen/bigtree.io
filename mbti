<script>
    const mbtis = ['INTJ', 'INTP', 'ENTJ', 'ENTP', 'INFJ', 'INFP', 'ENFJ', 'ENFP', 'ISTJ', 'ISFJ', 'ESTJ', 'ESFJ', 'ISTP', 'ISFP', 'ESTP', 'ESFP'];
    const questions = [
        { q: "å¦‚æœä½ æ˜¯ä¸€ä¸ªæ¯å­ï¼Œä½ å¸Œæœ›è£…ä»€ä¹ˆï¼Ÿ", options: [{t:"çƒˆé…’", v:"T"}, {t:"æ¸…èŒ¶", v:"F"}] },
        { q: "å‘¨æœ«ä½ ä¼šæŠŠè‡ªå·±æ”¾åœ¨å“ªé‡Œï¼Ÿ", options: [{t:"çƒ­é—¹çš„é›†å¸‚", v:"E"}, {t:"å®‰é™çš„è§’è½", v:"I"}] },
        { q: "é¢å¯¹æ··ä¹±ï¼Œä½ çš„ç¬¬ä¸€ååº”æ˜¯ï¼Ÿ", options: [{t:"æ•´ç†å®ƒ", v:"J"}, {t:"åŠ å…¥å®ƒ", v:"P"}] },
        { q: "ä½ æ›´ç›¸ä¿¡å“ªç§åŠ›é‡ï¼Ÿ", options: [{t:"é€»è¾‘ä¸æ•°æ®", v:"T"}, {t:"ç›´è§‰ä¸æƒ…æ„Ÿ", v:"F"}] },
        { q: "å½“ä¸–ç•Œæœ«æ—¥æ¥ä¸´ï¼Œä½ ä¼šï¼Ÿ", options: [{t:"åˆ¶å®šç”Ÿå­˜è®¡åˆ’", v:"S"}, {t:"å¯»æ‰¾æµªæ¼«çš„æ­»æ³•", v:"N"}] }
    ];

    const products = {
        'INTJ': { name: "é»‘æ´å’–å•¡è±†", desc: "çœ‹ä¼¼å†°å†·æ·±é‚ƒï¼Œå®åˆ™æµ“éƒæç¥ï¼Œä»…ä¾›å°‘æ•°äººå“é‰´ã€‚", tags: ["æç†æ€§", "é«˜å‹", "ç‹¬ç«‹"] },
        'INFP': { name: "æœˆå…‰æ•æ¢¦ç½‘", desc: "æ•æ‰é‚£äº›ä¸åˆ‡å®é™…çš„å¹»æƒ³ï¼Œå¹¶åœ¨æ·±å¤œå°†å…¶ç¼–ç»‡æˆè¯—ã€‚", tags: ["å…±æƒ…è€…", "å”¯ç¾", "æ˜“ç¢"] },
        'ENTP': { name: "å…¨è‡ªåŠ¨æŠ¬æ æœº", desc: "å¦‚æœä½ æ²¡æ„è§ï¼Œå®ƒä¼šåˆ¶é€ æ„è§ï¼›ä½ æœ‰æ„è§ï¼Œå®ƒå°±æ˜¯ä½ çš„æ„è§ã€‚", tags: ["æ‰“ç ´å¸¸è§„", "è„‘æ´", "æ··ä¹±ä¸­ç«‹"] },
        'ENFP': { name: "å½©è™¹å–·æ¼†", desc: "å“ªé‡Œæ²‰é—·å–·å“ªé‡Œï¼Œè®©æ•´ä¸ªå®‡å®™éƒ½å……æ»¡å¿«ä¹çš„åºŸè¯ã€‚", tags: ["å¿«ä¹ä¿®å‹¾", "æ²»æ„ˆ", "è‡ªç”±"] },
        // ... æ­¤å¤„å¯ä»¥æ‰©å±•æ›´å¤šäººæ ¼å¯¹åº”çš„å…·ä½“ç‰©å“
    };

    let userMBTI = "";
    let currentQ = 0;
    let scores = { E:0, I:0, T:0, F:0, P:0, J:0, S:0, N:0 };

    // åˆå§‹åŒ– MBTI é€‰æ‹©å™¨
    const selector = document.getElementById('mbti-selector');
    mbtis.forEach(type => {
        const btn = document.createElement('button');
        btn.className = 'btn';
        btn.style.padding = '10px 5px';
        btn.innerText = type;
        btn.onclick = () => startTest(type);
        selector.appendChild(btn);
    });

    function startTest(type) {
        userMBTI = type;
        document.getElementById('step-1').classList.add('hidden');
        document.getElementById('step-2').classList.remove('hidden');
        showQuestion();
    }

    function showQuestion() {
        if(currentQ < questions.length) {
            const q = questions[currentQ];
            document.getElementById('question-text').innerText = q.q;
            const optContainer = document.getElementById('options-container');
            optContainer.innerHTML = "";
            q.options.forEach(opt => {
                const b = document.createElement('button');
                b.className = 'option-btn';
                b.innerText = opt.t;
                b.onclick = () => { scores[opt.v]++; currentQ++; showQuestion(); };
                optContainer.appendChild(b);
            });
            document.getElementById('progress').innerText = currentQ;
        } else {
            showResult();
        }
    }

    function showResult() {
        document.getElementById('step-2').classList.add('hidden');
        document.getElementById('step-3').classList.remove('hidden');
        
        // é€»è¾‘ï¼šå¦‚æœé¢˜åº“æµ‹å‡ºçš„å€¾å‘ä¸åˆå§‹é€‰æ‹©ä¸€è‡´ï¼Œåˆ™å¼ºåŒ–è¯¥å±æ€§ï¼Œå¦‚æœä¸ä¸€è‡´ï¼Œåˆ™ç”Ÿæˆâ€œæ··è¡€â€ç»“æœ
        const data = products[userMBTI] || { name: "ç¥ç§˜ç›²ç›’", desc: "å¤æ‚çš„äººæ ¼éš¾ä»¥å®šä¹‰ï¼Œä½ æ˜¯ç‹¬ç‰¹çš„é™é‡ç‰ˆã€‚", tags: ["ç‹¬ç‰¹", "å¤šå…ƒ", "æœªçŸ¥"] };
        
        document.getElementById('res-type-name').innerText = data.name;
        document.getElementById('res-description').innerText = data.desc;
        document.getElementById('res-product').innerText = userMBTI + " å®šåˆ¶æ¬¾æŒ‚ä»¶";
        
        const tagsDiv = document.getElementById('res-tags');
        data.tags.forEach(tag => {
            const span = document.createElement('span');
            span.className = 'card-tag';
            span.innerText = "# " + tag;
            tagsDiv.appendChild(span);
        });
    }
